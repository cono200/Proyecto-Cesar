@model FinaliPB.Models.EditorialModel;
@{
    ViewData["Tittle"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="card col-8">
    <div class="card-header">
        nueva editorial
    </div>
    <div class="card-body  justify-content-center">
        <form asp-action="Editar" asp-controller="Editorial">
            <input asp-for="IdEditorial"type="hidden"/>
            <div class="col-md-4 mb-3">
                <label for="staticEmail2">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label for="staticEmail2">libros publicados</label>
                <input asp-for="Numero_Publicaciones" type="number" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label for="staticEmail2">Calidad</label>
                <input asp-for="Calidad" type="text" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label for="inputPassword2">Especialidad</label>
                <input asp-for="Especialidad" type="text" class="form-control" id="inputPassword" placeholder="Especialidad">
            </div>
                <button type="submit" class="btn btn-primary mb-3">Confirm identity</button>
        </form>
        <div>
            <a asp-action="Listado" asp-controller="Editorial" class="btn btn-warning btn-sm">volver</a>
        </div>
    </div>
</div>


